{
	"bin": {},
	"devDependencies": {
		"@joelek/wtf": "github:joelek/wtf#semver:^1.0",
		"typescript": "^4.4"
	},
	"license": "MIT",
	"main": "./dist/lib/index.js",
	"name": "@joelek/bedrock",
	"repository": {
		"type": "git",
		"url": "https://github.com/joelek/bedrock.git"
	},
	"scripts": {
		"build": "npm run codegen && npm run compile && npm run package && npm run test",
		"clean": "rm -rf ./build/ ./node_modules/",
